<Window x:Class="WisolSMTLineApp.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WisolSMTLineApp"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="ConfirmationWindow" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Odered Nodes" Margin="5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding OrderedNode, Mode=TwoWay}" Grid.Column="1" VerticalAlignment="Center"/>

        <Button Content="Confirm" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Click="Confirm_Click"/>
    </Grid>
</Window>
