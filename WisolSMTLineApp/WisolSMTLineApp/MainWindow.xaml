<Window x:Class="WisolSMTLineApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WisolSMTLineApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="400">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl Name="MainTab">
            <TabItem Header="PLAN" FontSize="16">
                <local:PlanControl/>
            </TabItem>
            <TabItem Header="ORDER" FontSize="16">
                <local:OrderControl/>
            </TabItem>
            <TabItem Header="MONITOR" FontSize="16">
                <local:MonitorControl/>
            </TabItem>
            <TabItem Header="SETTING" FontSize="16">
                <local:SettingControl/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
